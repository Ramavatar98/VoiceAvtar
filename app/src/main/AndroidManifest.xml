<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.voiceavtar">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- Added for Android 13+ -->

    <application
        android:allowBackup="true"
        android:label="Voice Avtar"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Updated services with foregroundServiceType -->
        <service
            android:name=".services.FloatingMicService"
            android:exported="false"
            android:foregroundServiceType="microphone" /> <!-- Android 12+ fix -->
        
        <service
            android:name=".services.VoiceListenerService"
            android:exported="false"
            android:foregroundServiceType="microphone" />

    </application>
</manifest>
